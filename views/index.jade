extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        div.text-center
          h1= title
          p Welcome to #{title}
        form(method='POST' action='/')
          div.form-group
            label(for='phone') Phone Number:
            input#phone.form-control(type='text', placeholder='Phone Number' name='phone')
          button.btn.btn-primary(type='submit') Get Code
         table.table.table-striped
          thead
            tr
              th Phone
              th Type
              th CreatedAt
          tbody
            each phone in phones
              tr
                td=phone.phone
                td=phone.type
                td=phone.createdAt
